<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="pop_bottom_style" >
        <item name="android:windowEnterAnimation">@anim/pop_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/pop_bottom_out</item>
    </style>

    <style name="pop_fullscreen_style">
        <item name="android:windowEnterAnimation">@anim/pop_fullscreen_in</item>
        <item name="android:windowExitAnimation">@anim/pop_fullscreen_out</item>
    </style>

    <!--could only be used in Activity that not extend "AppCompatActivity"-->
    <style name="AnotherBaseTheme" parent="@android:style/Theme.Light.NoTitleBar"/>

</resources>
